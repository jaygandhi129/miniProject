          </div>

        </div>

        <% if (edit===false){ %>
        <div class="container">
          <div class="row ">
            <div class="col-12 ">
              <table class="table table-image table-striped nowrap display table-bordered " id="test-table">
                <thead>
                  <tr>
                    <th scope="col">Sr No.</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">My Price</th>
                    <th scope="col">MRP</th>
                    <th scope="col">Delivery Avaliable</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody>

                  <% rows.forEach(function(row){ %>

                  <tr>
                    <th scope="row">1</th>
                    <td class="w-25">

                      <img src="https://firebasestorage.googleapis.com/v0/b/cornerkart-cd3d7.appspot.com/o/<%= row.pPhotoId%>?alt=media" class="img-fluid img-thumbnail">
                    </td>
                    <td><%= row.pName %></td>
                    <td><%=  row.pCategory %></td>
                    <td><%=  row.stockAvailable %></td>
                    <td><%=  row.sellerPrice %></td>
                    <td><%=  row.pMrp %></td>
                    <td><%=  row.iDelivery %></td>
                    <td>

                      <form action="/editProduct" method="post">
                        <input type="text" name="editbtn" value=<%= row.iId %> hidden>
                        <button class="btn btn-primary edit-btn" type="submit"  id="edit-btn" style="width:90%;" ><i class="fas fa-pencil-alt"></i></button>
                      </form>
                    </td>
                    <td>
                      <button class="btn btn-danger delete-btn" data-bs-toggle="modal" data-bs-target="#exampleModal" style="width:90%;" name="deleteproduct" data-id=<%= row.iId %>><i class="fas fa-trash"></i></button>
                    </td>
                  </tr>

                  <%  }); %>




                </tbody>
              </table>
            </div>
          </div>
        </div>
        <%}else{%>

        <div class="container">
          <div class="row ">
            <div class="col-12 ">
              <table class="table table-image table-striped nowrap display table-bordered " id="test-table">
                <thead>
                  <tr>
                    <th scope="col">Sr No.</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">My Price</th>
                    <th scope="col">MRP</th>
                    <th scope="col">Delivery Avaliable</th>
                    <th scope="col">Save</th>
                  </tr>
                </thead>
                <tbody>


                  <% rows.forEach(function(row){ %>


                    <%if( editValue == row.iId){%>
                  <tr>
                    <th scope="row">1</th>
                    <td class="w-25">

                      <img src="https://firebasestorage.googleapis.com/v0/b/cornerkart-cd3d7.appspot.com/o/<%= row.pPhotoId%>?alt=media" class="img-fluid img-thumbnail">
                    </td>
                    <form class="" action="/saveProduct" method="post">

                      <td><%= row.pName %></td>
                      <td ><%=  row.pCategory %></td>
                      <td><input class="form-control" type="text" name="stockAvailable" value=<%=  row.stockAvailable %>></td>
                      <td><input class="form-control" type="text" name="sellerPrice" value=<%=  row.sellerPrice %>></td>
                      <td><%=  row.pMrp %></td>
                      <td>
                        <select id="inputState" name="iDelivery" class="form-select" required>
                            <option selected><%=  row.iDelivery %></option>
                            <% if  (row.iDelivery == "N") {%>
                            <option>Y</option>
                          <%}else{%>
                            <option>N</option>
                          <%}%>
                        </select>
                      </td>


                      <td><button class="btn btn-primary edit-btn" id="edit-btn" type="submit" name="savebtn" style="width:90%;" value=<%= row.iId %>>Save</button></td>
                    </form>

                  </tr>
                    <%  } %>
                  <%  }); %>



                </tbody>
              </table>
            </div>
          </div>
        </div>
        <%}%>
        <script>
        $(".delete-btn").on("click", function () {
          var inventId = $(this).data("id");
          $("#confirm-delete").val(inventId);
        })
      </script>

