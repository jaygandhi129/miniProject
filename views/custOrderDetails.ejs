                    <p>Accepted, In-progress<br></p>
                    <%}%>

                </div>
  								<div class="order-tracking done">
  									<span class="is-complete"></span>
                    <%if(rows[0].order_status=="Order Completed"){%>
  									<p><%=rows[0].order_status%><br><span><%=rows[0].delivered_timestamp%></span></p>
                    <%}else if(rows[0].order_status=="Rejected" || rows[0].order_status=="Cancelled"){%>
                      <p><%=rows[0].order_status%><br></p>

                      <%}%>
  								</div>
  							</div>
  						</div>
  					</div>
            </div>
            </div>
          </div>
