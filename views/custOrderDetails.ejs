      <%}else{%>
        <p style="margin-left:3%;margin-top:1%;">Payment Status: <%=rows[0].paymentStatus%></p>
      <%}%>

  						<div class="col-12 col-md-10 hh-grayBox pt45 pb20">

  							<div class="row justify-content-between">
  								<div class="order-tracking completed">
  									<span class="is-complete"></span>
  									<p>Ordered<br><span><%=rows[0].ordered_timestamp%></span></p>
  								</div>
  								<div class="order-tracking waiting">
  									<span class="is-complete"></span>
