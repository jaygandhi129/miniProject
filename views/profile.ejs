        <div class="container-fluid">
          <div class="d-sm-flex justify-content-between align-items-center mb-4">
            <h3 class="text-dark mb-0">Profile</h3>
          </div>
          <div class="row mb-3">
            <div class="col-lg-4">
              <div class="card mb-3">
                <div class="card-body text-center shadow"><img class="rounded-circle mb-3 mt-4" src="https://firebasestorage.googleapis.com/v0/b/cornerkart-cd3d7.appspot.com/o/<%=rows[0].bPhotoId%>?alt=media" width="160" height="160">
                  <div class="mb-3"></div>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="row">
                <div class="col">
                  <div class="card shadow mb-3">
                    <div class="card-header py-3 container-fluid">
                      <h4 class="text-primary m-0 fw-bold">Seller Info
                      <button class="btn btn-primary btn-sm d-sm-inline-block sellereditbutt" style="background: rgba(0,41,102,0.93); float:right;">
                        Edit</button></h4>

                    </div>
                    <div class="card-body">
                      <form action="/updateprofileseller" class="needs-validation" method="post" novalidate>
                        <div class="row">
                          <div class="col">
                            <div class="mb-3"><label class="form-label" for="Name"><strong>Name</strong></label>
                              <input
                                class="form-control sdis" type="text" id="username" name="sName" placeholder="Name"
                                value="<%=rows[0].sName%>" pattern="[A-Za-z\s]*" readonly required>
                              <div class="invalid-feedback">Name must contain only alphabets.</div>
                            </div>
                          </div>

                          <div class="col">
                            <div class="mb-3"><label class="form-label" for="sId"><strong>Seller Id</strong></label><input class="form-control" type="text" id="sId" placeholder="Seller Id" name="sId" value="<%=rows[0].sId%>" readonly></div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <div class="mb-3"><label class="form-label" for="phone_no"><strong>Phone Number</strong></label><input class="form-control" type="text" id="phone_num" placeholder="Registered Mobile No" name="sPhoneNo"
                                value="<%=rows[0].sPhoneNo%>" readonly> </div>
                          </div>
                          <div class="col">
                            <div class="mb-3"><label class="form-label" for="dob"><strong>Birth Date</strong></label><input class="form-control sdis" type="date" id="last_name" placeholder="Dob" name="sDOB" value="<%=rows[0].sDOB%>" readonly></div>
                          </div>
                        </div>
                        <div class="mb-3"><button class="btn btn-primary btn-sm ssave" style="display:none;" type="submit" disabled>Save</button></div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card shadow mb-5">
            <div class="card-header py-3">
              <p class="text-primary m-0 fw-bold" style="font-size:1.6rem">Business Details
              <button class="btn btn-primary btn-sm d-sm-inline-block businesseditbutt" style="background: rgba(0,41,102,0.93); float:right;">
                Edit</button></p>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-12">
                  <form action="/updateprofilebusiness" class="needs-validation" method="post" novalidate>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="mb"><label class="form-label" for="bName"><strong>Business Name</strong></label><input class="form-control bdis" type="text" id="bname" placeholder="Business Name" name="bName" value="<%=rows[0].bName%>" readonly required>
                        </div>
                      </div>
                      <!-- <div class="col-md-6">
                        <div class="mb"><label class="form-label" for="bCategory"><strong>Business Category</strong></label><input class="form-control bdis" type="text" id="bCategory" placeholder="Business Category" name="bCategory"
                            value="<%=rows[0].bCategory%>" readonly></div>
                      </div> -->
                    </div>

                    <div class="row bpadd">
                      <div class="col-md-6">
                        <div class="mb"><label class="form-label" for="bMobile"><strong>Business Mobile</strong></label><input class="form-control bdis" type="text" id="bmobile" placeholder="Business Mobile" name="bMobile" value="<%=rows[0].bMobile%>"
                            readonly required pattern="[0-9]{10}"><div class="invalid-feedback">Business Mobile must contain 10 digits.</div>
                            </div>
                      </div>
                      <div class="col-md-6">
                        <div class="mb"><label class="form-label" for="bGSt"><strong>GST No</strong></label><input class="form-control" type="text" id="bGst" placeholder="GST" name="bGST" value="<%=rows[0].bGST%>" readonly required></div>
                      </div>
                    </div>

                    <div class="row bpadd">
                      <div class="col-md-6">
                        <div class="mb"><label class="form-label" for="bEmail"><strong>Business Email</strong></label><input class="form-control bdis" type="text" id="bemail" placeholder="abc@example.com" name="bEmail" value="<%=rows[0].bEmail%>"
                            readonly required pattern="[A-Za-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"><div
                              class="invalid-feedback">Enter valid Email</div>
                            </div>
                      </div>
                      <div class="col-md-6">
                        <div class="mb"><label class="form-label" for="bsite"><strong>Website</strong></label><input class="form-control bdis" type="text" id="bsite" placeholder="www.eg.com" name="bWebsite" value="<%=rows[0].bWebsite%>" readonly></div>
                      </div>
                    </div>

                    <div class="row bpadd">
                      <div class="col-md-12">
                        <div class="mb"><label class="form-label" for="badd"><strong>Shop Address</strong></label><input class="form-control bdis" type="text" id="bmobile" placeholder="Business Address" name="bAddress" value="<%=rows[0].bAddress%>"
                            readonly required></div>
                      </div>

                      <div class="row bpadd">
                        <div class="col-md-4">
                          <div class="mb"><label class="form-label" for="bcity"><strong>City</strong></label><input class="form-control bdis" type="text" id="bcity" placeholder="City" name="bCity" value="<%=rows[0].bCity%>" readonly required></div>
                        </div>
                        <div class="col-md-4">
                          <div class="mb"><label class="form-label" for="bstate"><strong>State</strong></label><input class="form-control bdis" type="text" id="bstate" placeholder="State" name="bState" value="<%=rows[0].bState%>" readonly required></div>
                        </div>
                        <div class="col-md-4">
                          <div class="mb"><label class="form-label" for="bzip"><strong>Pin Code</strong></label><input
                              class="form-control bdis" type="text" id="bzip" placeholder="Zip" name="bZip"
                              value="<%=rows[0].bZip%>" readonly required pattern="[0-9]{6}">
                            <div class="invalid-feedback">Pin Code must contain 6 digits.</div>
                          </div>
                        </div>
                      </div>

                    </div>

                    <div class="mb-3 bpadd"><button class="btn btn-primary btn-sm bsave" style="display:none;" type="submit" disabled>Save</button></div>

                  </form>
                </div>
              </div>
            </div>
          </div>
